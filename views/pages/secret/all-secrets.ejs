<div id="all-secrets" v-cloak>
  <header class="main">
    <div class="container">
      <div class="title d-flex justify-content-between align-items-end">
        <h2>Secrets</h2>
        <span><a target="_blank" class="btn btn-dark btn-sm" href="/share-secret">Add Secret</a></span>
      </div>
    </div>
  </header>

  <div class="container">
    <div v-if="!secrets.length">No secrets!</div>

    <ul class="secrets-list">
      <li v-for="secret in secrets">
        <div class="secret">
          <div class="header d-flex justify-content-between">
            <strong>Secret from {{ secret.name }} <span v-if="secret.email" class="email">({{ secret.email }})</span></strong>
            <span class="date">{{ secret.createdAtHumanDate }}</span>
          </div>
          <div class="secret-content">
            <textarea :data-id="secret.id" rows="2" class="js-auto-size content w-100">{{ secret.content }}</textarea>
          </div>
          <div class="foot text-right">
            <button :data-id="secret.id" class="btn btn-secondary btn-sm copy-to-clipboard">Copy to Clipboard</button>
            <button class="btn btn-danger btn-sm" @click="clickDestroySecret(secret.id)">Delete</button>
          </div>
        </div>
      </li>
    </ul>

    <div class="actions mt-5">
      <a target="_blank" class="btn btn-dark" href="/share-secret">Add Secret</a>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
